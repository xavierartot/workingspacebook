.ShopGallery
  div.ui.segment.galleryShop
    padding: 0;
    box-shadow: 0px 3px 8px -4px rgba(0,0,0,0.15);
    display: block;
    transform: translate3d(0, 0, 0);
    -webkit-transform: translate3d(0, 0, 0);
    -webkit-transition: 0.3s;
    transition: 0.3s;
    color: #adadad;
    border-radius: 0;
    border 0
    font-weight: 300;
    letter-spacing: 0.8px;
  //remove the padding
  .ui.grid>.column:not(.row)
    padding: 0
    padding: 1px;
  .ui.segment
    @extend .p0
    height: 100%;
    width: 100%;
    border-radius: 0;
    box-shadow: none;
    border 0
    transition background-color .3s
    &:hover
      background-color: #eaeaea
  .centerShopGallery
    @extend .center-columns
  .ui.label
    margin: 1rem 0 1.5rem 0
  .ui.image
    margin-top: 3rem;
    @extend .mb2

div.ui.segment.gallery
  padding 0
  box-shadow 0px 3px 8px -4px rgba(0,0,0,0.15)
  display block
  transform translate3d(0, 0, 0)
  transition 0.3s
  color #adadad
  border-radius 0
  border 0 solid #525252
  font-weight 300
  letter-spacing 0.8px
div.ui.segment.gallery:hover
  box-shadow 0 22px 43px rgba(0,0,0,0.15)
  transform translateY(-4px)
.ui.grid>.gallery-col.column:not(.row)
  padding 2.3rem
.gallery-col
  a.gallery-ribbon.label
    padding-top 1rem
    z-index 2
    left calc(100% + 1rem + .42em) !important
    font-weight 300
    font-size 19px
    margin-top 1rem
.gallery-image-container
  padding 1rem
  display flex
  justify-content center
  align-items center
  @media only screen and (min-width 992px)
    padding 0
.gallery-image
  cursor pointer
.gallery-col .ui.divider
  opacity 0.4
.gallery-col .product-gallery-details
  padding 1rem
.gallery-col .footer
  padding 1rem
.gallery-col .footer i
  font-size 1.3rem
div.gallery-col .footer>div .number-like
  line-height 1.5
	font-size 1.1rem !important
	font-weight 300
div.gallery-col .footer>div .plus
  line-height 1.2
  font-size 1.4rem !important
div.gallery-col .footer>div .plus:hover
  color #525252
.gallery-col .footer>div .trending
  line-height 1.5
div.gallery-col .footer .heart:hover
  color #C53B3B
.text-underline
  display block
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  width 90%
  cursor pointer
.gallery
	div.column.tal.footer-first-element
		padding 0
		.trending-link
			@extend .center
			@media only screen and (min-width 992px)
				padding-left 1rem
				justify-content flex-start
.gallery
	div.column.tar.footer-second-second
		padding 0
		@extend .center
		justify-content space-evenly
		@media only screen and (min-width 992px)
      justify-content flex-end
      padding-right 1rem
		.heart-link
			@media only screen and (min-width 992px)
				margin-right 1rem

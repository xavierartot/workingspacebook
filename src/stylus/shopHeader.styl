.ShopHeader
  .ui.container
    position: relative
  .wrapperShopHeader
    position: relative;
    padding: 84px 0;
    margin-bottom: 0;
    z-index: 2;
    width: 100%;
  div.tac
    margin-bottom: 0
  .btn-radius
    @extend .btn-radius
    @extend .ml1
    border-radius: 50px;
    padding: 1.2rem 3rem;
    font-size: 1.2rem;
    font-weight: 300;
  .box-btn
    position: absolute;
    right: 0;
    height: 100%;
    top: 0;
    bottom: 0;
    display: flex
    flex-direction: row;
    align-items: center;
  .navigationContainer
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
  .ui.header
    font-size: 4rem;
    font-weight: 300;
  .ui.basic.label
    margin-top: 2rem;
    margin-left: 1.8em;
